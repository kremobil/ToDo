<Window x:Class="todo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Background="Gray">
            <Label BorderThickness="0 0 0 1" BorderBrush="YellowGreen" Padding="12" Foreground="YellowGreen" VerticalContentAlignment="Center" HorizontalAlignment="Stretch">
                <WrapPanel HorizontalAlignment="Stretch">
                    <TextBlock FontSize="18" FontWeight="Bold">Organizer app</TextBlock>
                    <TextBlock x:Name="Clock" FontSize="18" FontWeight="Bold"></TextBlock>
                </WrapPanel>
                <Label.Background>
                    <ImageBrush ImageSource="../I"></ImageBrush>
                </Label.Background>
            </Label>
            
    </StackPanel>
</Window>
